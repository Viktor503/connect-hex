<!doctype html>
<html lang="hu">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="stylesheet" href="/css/style.css" type="text/css" />
        <title>Index</title>
    </head>
    <body>
        <div id="menus">
            <h1 id="title">
                <span id="title_start">CONNECT</span>-<span id="title_end"
                    >HEX</span
                >
            </h1>
            <div id="menu_buttons">
                <button id="btn_local" class="custom_button">Local coop</button>
                <button id="btn_online_play" class="custom_button">
                    Online play
                </button>
                <button id="btn_ai" class="custom_button">
                    Local against AI
                </button>
            </div>
            <form
                action="/game"
                name="popup_local"
                style="display: none"
                method="POST"
            >
                <label for="board_size">Board size:</label>
                <input
                    type="number"
                    id="board_size"
                    name="board_size"
                    value="7"
                    max="15"
                    min="1"
                /><br />
                <label for="hex_mode">Play basic hex:</label>
                <input type="checkbox" id="hex_mode" name="hex_mode" /><br />
                <input type="submit" value="Play" />
            </form>
            <form name="popup_online" style="display: none" method="POST">
                <label for="board_size_online">Board size:</label>
                <input
                    type="number"
                    id="board_size_online"
                    name="board_size_online"
                    value="2"
                    max="15"
                    min="1"
                /><br />
                <label for="hex_mode_online">Play basic hex:</label>
                <input
                    type="checkbox"
                    id="hex_mode_online"
                    name="hex_mode_online"
                /><br />

                <p>Who should go first?</p>
                <input
                    type="radio"
                    id="me_first"
                    name="player_order"
                    value="me"
                    checked="checked"
                />
                <label for="me_first">I will go first!</label><br />
                <input
                    type="radio"
                    id="opponent_first"
                    name="player_order"
                    value="opponent"
                />
                <label for="opponent_first">My opponent will go first!</label
                ><br />
                <input
                    type="radio"
                    id="random"
                    name="player_order"
                    value="random"
                />
                <label for="random">Random</label>
                <br /><br />

                <label for="create_game">Create a new game room:</label>
                <input
                    type="button"
                    id="create_game"
                    value="Create"
                    onclick="createGame()"
                /><br />
                <p>OR</p>
                <br />
                <label for="game_id">Join a game room:</label>
                <input type="text" id="game_id" name="game_id" /><br />
                <input
                    type="button"
                    id="join_game"
                    value="Join"
                    onclick="joinGame()"
                /><br />
            </form>
            <form
                action="/game/ai"
                name="popup_ai"
                style="display: none"
                method="POST"
            >
                <label for="board_size_ai">Board size:</label>
                <input
                    type="number"
                    id="board_size_ai"
                    name="board_size_ai"
                    value="2"
                    max="15"
                    min="1"
                /><br />
                <label for="hex_mode_ai">Play basic hex:</label>
                <input
                    type="checkbox"
                    id="hex_mode_ai"
                    name="hex_mode_ai"
                /><br />

                <p>Who should go first?</p>
                <input
                    type="radio"
                    id="me_first"
                    name="player_order_ai"
                    value="me"
                    checked="checked"
                />
                <label for="me_first">I will go first!</label><br />
                <input
                    type="radio"
                    id="opponent_first"
                    name="player_order_ai"
                    value="opponent"
                />
                <label for="opponent_first">The AI will go first!</label><br />
                <input
                    type="radio"
                    id="random"
                    name="player_order_ai"
                    value="random"
                />
                <label for="random">Random</label>
                <br />

                <p>Which model would you like to challenge?</p>
                <input
                    type="radio"
                    id="random_model"
                    name="model"
                    value="random"
                    checked="checked"
                />
                <label for="random_model">Random model</label><br />
                <input
                    type="radio"
                    id="greedy_model"
                    name="model"
                    value="greedy"
                />
                <label for="greedy_model">Greedy model</label><br />
                <input
                    type="radio"
                    id="stohastic_greedy_model"
                    name="model"
                    value="stohastic_greedy"
                />
                <label for="stohastic_greedy_model"
                    >Stohastic greedy model</label
                ><br />
                <br />
                <input type="submit" id="play_ai" value="Play" /><br />
            </form>
            <div id="waiting_area"></div>
        </div>
    </body>
</html>
<script src="/socket.io/socket.io.js"></script>
<script src="/models/client.js"></script>
<script>
    const btn_local = document.getElementById("btn_local");
    const btn_online_play = document.getElementById("btn_online_play");
    const btn_ai = document.getElementById("btn_ai");
    btn_local.addEventListener("click", () => {
        if (document.forms["popup_local"].style.display === "block") {
            document.forms["popup_local"].style.display = "none";
        } else {
            document.forms["popup_local"].style.display = "block";
        }
    });
    btn_online_play.addEventListener("click", () => {
        if (document.forms["popup_online"].style.display === "block") {
            document.forms["popup_online"].style.display = "none";
        } else {
            document.forms["popup_online"].style.display = "block";
        }
    });
    btn_ai.addEventListener("click", () => {
        if (document.forms["popup_ai"].style.display === "block") {
            document.forms["popup_ai"].style.display = "none";
        } else {
            document.forms["popup_ai"].style.display = "block";
        }
    });
</script>
